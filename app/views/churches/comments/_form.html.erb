<div class="col-lg-12 comment_edit_<%= @comment.id %>">
  <div class="form-group">
    <%= form_for @comment, url: church_comment_path(@comment), method: :put, remote: true do |f| %>

      <div class="field">
        <%= f.label :comment, 'コメント編集' %>
        <%= f.text_area :comment, size: '10x5', class: 'form-control', id: "edit_comment_id_#{@comment.id}" %>
      </div>

      <div class="actions text-right">
        <%= f.submit '更新', id: 'comment-submit',class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
