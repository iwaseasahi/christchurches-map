<!-- meta -->
<% content_for :title do %>
  <%= @church.name %> | キリスト教会マップ
<% end %>
<% content_for :keywords do %>
  <%= @church.name %>,キリスト教,教会,church,プロテスタント,地図,マップ,住所
<% end %>
<% content_for :description do %>
  <%= @church.name %>に関する詳細情報です。
<% end %>

<!-- Header -->
<div class="church-header" style="background-image: url(<%= @church.top_image_url(:thumb) %>)">
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Welcome To</div>
      <div class="intro-heading"><%= @church.name %></div>
      <div id="top-image-link">
        <%= form_for @church, url: upload_top_image_church_path(@church.id), method: :put do |f| %>
          <div class="field">
            <span class="page-scroll btn btn-xl btn-file">
              <i class="fa fa-file-image-o" aria-hidden="true"></i> トップ画像を変更 <%= f.file_field :top_image %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Services Section -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Information</h2>
        <h3 class="section-subheading text-muted"><%= @church.name %>に関する情報</h3>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-6">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-map-marker fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading"><%= @church.address %></h4>
      </div>
      <div class="col-md-6">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-users fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading"><%= @church.group.name %></h4>
      </div>
    </div>
  </div>
  <%= form_for @church, url: church_path(@church), method: :put do |f| %>
  <div class="line-section-middle">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-phone fa-stack-1x fa-inverse"></i>
          </span>
          <div class="field">
            <%= f.label :tel, '電話番号', class: 'service-heading' %><br />
            <%= f.telephone_field :tel %>
          </div>
        </div>
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-envelope-o fa-stack-1x fa-inverse"></i>
          </span>
          <div class="field">
            <%= f.label :email, 'メールアドレス', class: 'service-heading' %><br />
            <%= f.email_field :email %>
          </div>
        </div>
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fa fa-circle fa-stack-2x text-primary"></i>
            <i class="fa fa-home fa-stack-1x fa-inverse"></i>
          </span>
          <div class="field">
            <%= f.label :url, 'ホームページ', class: 'service-heading' %><br />
            <%= f.url_field :url %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="line-section-middle">
    <div class="container">
      <div class="row text-center">
        <div>
          <%= button_tag type: 'submit', class: 'page-scroll btn btn-xl-secondary' do %>
            <i class="fa fa-pencil" aria-hidden="true"></i> 更新する
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</section>

